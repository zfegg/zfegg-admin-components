{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "useUnknownInCatchVariables": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["vite/client"],
    "paths": {
      "@zfegg/admin-layout": ["packages/layout/src"],
      "@zfegg/admin-admin": ["packages/admin/src"],
      "@zfegg/admin-application": ["packages/application/src"],
      "@zfegg/admin-base-project": ["packages/base-project/src"],
      "@zfegg/admin-data-source-components": ["packages/data-source-components/src"]
    }
  },
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
